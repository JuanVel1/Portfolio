---
interface Props {
  title: string;
  content: string;
  certifier: string;
  link: string;
}

const { title, content, certifier, link } = Astro.props;
---

<div class="cookieCard">
  <p class="cookieHeading">{title}</p>
  <p class="cookieDescription">
    {content}
  </p>
  <a href={link} target="_blank"><button class="acceptButton">{certifier}</button></a>
</div>

<style>
  /* From Uiverse.io by vinodjangid07 */
  .cookieCard {
    width: 300px;
    height: 200px;
    background: linear-gradient(to right, rgb(35, 6, 54), rgb(247, 104, 104));
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    gap: 20px;
    padding: 20px;
    position: relative;
    overflow: hidden;
    border-radius: 15px;
  }

  .cookieCard::before {
    width: 150px;
    height: 150px;
    content: "";
    background: linear-gradient(to right, rgb(35, 6, 54), rgb(250, 186, 186));
    position: absolute;
    z-index: 1;
    border-radius: 50%;
    right: -25%;
    top: -25%;
  }

  .cookieHeading {
    font-size: 1.5em;
    font-weight: 600;
    color: rgb(241, 241, 241);
    z-index: 2;
  }

  .cookieDescription {
    font-size: 0.9em;
    color: rgb(241, 241, 241);
    z-index: 2;
  }

  .cookieDescription a {
    color: rgb(241, 241, 241);
  }

  .acceptButton {
    padding: 11px 20px;
    background-color: #7b57ff;
    transition-duration: 0.2s;
    border: none;
    color: rgb(241, 241, 241);
    cursor: pointer;
    font-weight: 600;
    z-index: 2;
  }

  .acceptButton:hover {
    background-color: #714aff;
    transition-duration: 0.2s;
  }
</style>
